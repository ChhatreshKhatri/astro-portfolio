---
import { Image } from "astro:assets";
import NavIcons from "./NavIcons.astro";
import NavLinks from "./NavLinks.astro";
---

<header class="fixed w-full top-0 z-10">
  <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:bg-ck1 focus:text-light focus:rounded focus:font-semibold">Skip to main content</a>
  <nav id="navBar" class="w-full flex flex-col items-center px-3 py-2 xs:px-6 md:px-12 lg:px-20 transition backdrop-blur-md" aria-label="Main navigation">
    <div class="flex flex-col justify-center lg:flex-row lg:justify-between w-full gap-y-2">
      <div class="flex justify-between opacity-0 animate-fade-in-down">
        <a aria-label="Chhatresh Khatri - Home Page" href="/" class="flex justify-center items-center cursor-pointer hover-scale">
          <Image 
            src="https://cdn.chhatreshkhatri.com/images/ChhatreshKhatri.svg" 
            alt="Chhatresh Khatri logo" 
            class="max-w-60" 
            title="Chhatresh Khatri"
            loading="eager"
            width={512}
            height={41}
          />
        </a>

        <button id="menuButton" aria-label="Toggle navigation menu" aria-expanded="false" class="flex flex-col justify-center items-center lg:hidden cursor-pointer">
          <span id="topBar" class="bg-linear-to-r from-green2 to-blue2 transition-all duration-300 ease-out h-0.5 w-6 rounded-sm -translate-y-1"></span>
          <span id="middleBar" class="bg-linear-to-r from-green2 to-blue2 transition-all duration-300 ease-out h-0.5 w-6 rounded-sm my-0.5 opacity-100"></span>
          <span id="bottomBar" class="bg-linear-to-r from-green2 to-blue2 transition-all duration-300 ease-out h-0.5 w-6 rounded-sm translate-y-1"></span>
        </button>
      </div>
      <div id="navLinks" class="hidden flex-col lg:flex-row items-center justify-center gap-x-8 gap-y-1 text-xl font-semibold lg:flex nav-animate-links" aria-label="Page navigation">
        <NavLinks page="Home" link="/" ID="hover1" />
        <NavLinks page="About" link="/about" ID="hover2" />
        <NavLinks page="Projects" link="/projects" ID="hover3" />
      </div>
      <div id="navIcons" class="hidden flex-col lg:flex lg:flex-row items-center justify-center gap-x-4 gap-y-2 nav-animate-icons" aria-label="Social media links">
        <NavIcons />
      </div>
    </div>
  </nav>
</header>

<script>
  let navOpen = false;

  // Cache DOM elements
  const topBar = document.getElementById("topBar");
  const middleBar = document.getElementById("middleBar");
  const bottomBar = document.getElementById("bottomBar");
  const navIcons = document.getElementById("navIcons");
  const navBar = document.getElementById("navBar");
  const navLinks = document.getElementById("navLinks");
  const menuButton = document.getElementById("menuButton");

  // Apply navbar styling based on scroll position
  const updateNavbarStyle = () => {
    if (window.scrollY > 0 || navOpen) {
      navBar?.classList.add("bg-navbarBg/50", "dark:bg-darker/80", "shadow-bottom", "py-1.5");
      navBar?.classList.remove("py-2");
    } else {
      navBar?.classList.remove("bg-navbarBg/50", "dark:bg-darker/80", "shadow-bottom", "py-1.5");
      navBar?.classList.add("py-2");
    }
  };

  // Check scroll position on page load
  updateNavbarStyle();

  // Helper function to toggle classes
  const toggleClasses = (element: HTMLElement | null, addClasses: string[], removeClasses: string[]) => {
    if (element) {
      element.classList.remove(...removeClasses);
      element.classList.add(...addClasses);
    }
  };

  function toggleNav() {
    navOpen = !navOpen;

    if (navOpen) {
      toggleClasses(topBar, ["rotate-45", "translate-y-1"], ["translate-y-1"]);
      toggleClasses(middleBar, ["opacity-0"], ["opacity-100"]);
      toggleClasses(bottomBar, ["-rotate-45", "-translate-y-1"], ["translate-y-1"]);
      toggleClasses(navLinks, ["flex"], ["hidden"]);
      toggleClasses(navIcons, ["flex"], ["hidden"]);
      menuButton?.setAttribute("aria-expanded", "true");
      if (window.scrollY === 0) {
        navBar?.classList.add("shadow-bottom");
      }
      navBar?.classList.add("bg-navbarBg/50", "dark:bg-darker/80");
    } else {
      toggleClasses(topBar, ["-translate-y-1"], ["rotate-45", "translate-y-1"]);
      toggleClasses(middleBar, ["opacity-100"], ["opacity-0"]);
      toggleClasses(bottomBar, ["translate-y-1"], ["-rotate-45", "-translate-y-1"]);
      toggleClasses(navLinks, ["hidden"], ["flex"]);
      toggleClasses(navIcons, ["hidden"], ["flex"]);
      menuButton?.setAttribute("aria-expanded", "false");
      if (window.scrollY === 0) {
        navBar?.classList.remove("bg-navbarBg/50", "dark:bg-darker/80", "shadow-bottom");
      }
    }
  }

  window.addEventListener("scroll", updateNavbarStyle);

  menuButton?.addEventListener("click", toggleNav);

  // Note: aria-current is now handled in NavLinks.astro component
</script>
