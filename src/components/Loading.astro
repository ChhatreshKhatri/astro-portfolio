---
interface Props {
  label?: string;
}

const { label = "Loading content" } = Astro.props;
---

<div class="flex justify-center items-center" role="status" aria-label={label}>
  <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-blue-500" />
  <span class="sr-only">Loading...</span>
</div>
