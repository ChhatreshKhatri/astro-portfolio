---
import { Image } from "astro:assets";
const visitsCounter = import.meta.env.PUBLIC_visitsCounter;
---

<footer class="mt-auto">
  <section class="flex flex-col md:flex-row justify-between items-center w-full shadow-top bg-navbarBg dark:bg-darker py-2 px-3 xs:px-6 md:px-12 lg:px-20 mt-auto space-y-0.50">
    <div class="flex justify-center items-center" title="Chhatresh Khatri">
      <Image src={"https://cdn.chhatreshkhatri.com/images/ChhatreshKhatri.svg"} alt="Chhatresh Khatri" width={239} height={19} class="h-8" />
    </div>
    <div class="flex items-center justify-center text-center">
      <p>
        <strong>&copy; Chhatresh Khatri <time datetime="2023">2023</time></strong>
      </p>
    </div>
    <nav class="flex justify-center items-center gap-2 xs:gap-4" aria-label="Footer navigation">
      <a href="/privacy-policy" aria-label="Privacy Policy"> Privacy Policy </a>
      <Image id="visitsImage" src=`https://visits.chhatreshkhatri.com/${visitsCounter}?LBGC=3048C680&CBGC=30C68A80&LTC=FFFFFF&CTC=FFFFFF&LBC=3048C680&BC=30C68A80&TC=FFFFFF&TTC=FFFFFF` alt="Website visits" width={75} height={22} class="" />
    </nav>
  </section>
</footer>
