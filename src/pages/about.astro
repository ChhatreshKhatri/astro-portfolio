---
import PageHead from "../components/PageHead.astro";
import RootLayout from "../layouts/RootLayout.astro";
import SkillButton from "../components/SkillButton.astro";
import CIcon from "../assets/CIcon.astro";
import CPlusPlusIcon from "../assets/CPlusPlusIcon.astro";
import JavaIcon from "../assets/JavaIcon.astro";
import MysqlIcon from "../assets/MysqlIcon.astro";
import HtmlIcon from "../assets/HtmlIcon.astro";
import CssIcon from "../assets/CssIcon.astro";
import JavaScriptIcon from "../assets/JavaScriptIcon.astro";
import TypeScriptIcon from "../assets/TypeScriptIcon.astro";
import NextjsIcon from "../assets/NextjsIcon.astro";
import ReactIcon from "../assets/ReactIcon.astro";
import ExpressIcon from "../assets/ExpressIcon.astro";
import NoedIcon from "../assets/NodejsIcon.astro";
import BootstrapIcon from "../assets/BootstrapIcon.astro";
import TailwindIcon from "../assets/TailwindIcon.astro";
import MongoDBIcon from "../assets/MongoDBIcon.astro";
import PostmanIcon from "../assets/PostmanIcon.astro";
import GitIcon from "../assets/GitIcon.astro";
import GitHubIcon from "../assets/GitHubIcon.astro";
import VercelIcon from "../assets/VercelIcon.astro";
import FirebaseIcon from "../assets/FirebaseIcon.astro";
import FigmaIcon from "../assets/FigmaIcon.astro";
import CanvaIcon from "../assets/CanvaIcon.astro";
import GimpIcon from "../assets/GimpIcon.astro";
import CloudflareIcon from "../assets/CloudflareIcon.astro";
import AlibabaCloud from "../assets/AlibabaCloud.astro";
import GoogleCloudIcon from "../assets/GoogleCloudIcon.astro";
import VSCodeIcon from "../assets/VSCodeIcon.astro";
import LinuxIcon from "../assets/LinuxIcon.astro";
import UbuntuIcon from "../assets/UbuntuIcon.astro";
import WindowsIcon from "../assets/WindowsIcon.astro";
import AstroIcon from "../assets/AstroIcon.astro";
---

<RootLayout
  title="Chhatresh Khatri | About"
  description="Chhatresh Khatri About. Full Stack developer skilled in diverse tech including C/C++, Java, HTML5, CSS3, JavaScript, React.js, Next.js, and more."
  keywords=""
  url="https://www.chhatreshkhatri.com/about">
  <PageHead pageTitle="About" />
  <div class="relative group rounded-lg w-full text-justify p-3 xs:p-6 xs:px-10 py-6">
    <div class="absolute -inset-0 rounded-lg bg-gradient-to-r from-blue2/50 to-green2/50 opacity-20 transition duration-500 group-hover:opacity-50">
    </div>
    <h2 class={`relative text-2xl xxs:text-3xl md:text-4xl text-center`}>Description</h2>
    <p class="relative text-lg xs:text-xl mt-4">
      Hi there! My name is Chhatresh Khatri and I&apos;m a Full Stack developer with a passion for building modern and user-friendly websites and
      applications. I have experience working with a range of Tech Stack to create clean and modular code that follows industry best practices. In
      addition to my technical skills, I also have a keen eye for design and enjoy creating responsive and visually appealing websites. I&apos;m
      learning about the latest trends in the tech industry. I&apos;m a total go-getter and always bring my A-game, plus I&apos;m super easy to talk
      to! I&apos;m driven, self-motivated, and passionate about all things tech. Let&apos;s collaborate and create something extraordinary! Thanks for
      visiting my portfolio website!
    </p>
  </div>
  <button class="rounded flex items-center justify-center bg-gradient-to-r from-blue1 to-yellow1 p-0.5">
    <h2
      class="flex justify-center items-center font-semibold tracking-wider text-xl xxs:text-2xl md:text-3xl p-1 md:px-2 bg-buttonBg dark:bg-darked rounded">
      Technology Stack
    </h2>
  </button>
  <div class="relative group rounded-lg w-full">
    <div class="absolute -inset-0 rounded-lg bg-gradient-to-r from-blue2/50 to-green2/50 opacity-20 transition duration-500 group-hover:opacity-50">
    </div>
    <div class="relative flex flex-col w-full p-3 xs:p-6 xs:px-10 py-6 gap-4">
      <h3 class="text-2xl xxs:text-3xl md:text-4xl text-center">Languages</h3>
      <div class="flex flex-wrap items-center justify-center gap-2 xs:gap-4">
        <SkillButton name="C" color="bg-[#1563b1]" classProps=""><CIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="C++" color="bg-[#004488]" classProps=""><CPlusPlusIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Java" color="bg-[#437291]" classProps=""><JavaIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="MySQL" color="bg-[#4479A1]" classProps=""><MysqlIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="HTML5" color="bg-[#e34f26]" classProps=""><HtmlIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="CSS3" color="bg-[#1572B6]" classProps=""><CssIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="JavaScript" color="bg-[#F7DF1E]" classProps=""><JavaScriptIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="TypeScript" color="bg-[#3178C6]" classProps=""><TypeScriptIcon class="w-6 xs:w-8" /></SkillButton>
      </div>
      <h3 class="text-2xl xxs:text-3xl md:text-4xl text-center">Frameworks & Libraries</h3>
      <div class="flex flex-wrap items-center justify-center gap-2 xs:gap-4">
        <SkillButton name="React.JS" color="bg-[#61DAFB]" classProps=""><ReactIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Next.JS" color="bg-[#000000]" classProps="text-light"><NextjsIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Astro" color="bg-[#BC52EE]" classProps="text-light"><AstroIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Express.JS" color="bg-[#000000]" classProps="text-light"><ExpressIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Node.JS" color="bg-[#339933]" classProps=""><NoedIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Bootstrap" color="bg-[#05054B]" classProps="text-light"><BootstrapIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Tailwind CSS" color="bg-[#06B6D4]" classProps=""><TailwindIcon class="w-6 xs:w-8" /></SkillButton>
      </div>
      <h3 class="text-2xl xxs:text-3xl md:text-4xl text-center">Tools & IDEs</h3>
      <div class="flex flex-wrap items-center justify-center gap-2 xs:gap-4">
        <SkillButton name="MongoDB" color="bg-[#47A248]" classProps=""><MongoDBIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Postman" color="bg-[#FF6C37]" classProps=""><PostmanIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Git" color="bg-[#F05032]" classProps=""><GitIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="GitHub" color="bg-[#181717]" classProps="text-white"><GitHubIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Vercel" color="bg-[#000000]" classProps="text-white"><VercelIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Firebase" color="bg-[#FFCA28]" classProps=""><FirebaseIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Figma" color="bg-[#F24E1E]" classProps=""><FigmaIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Canva" color="bg-[#00C4CC]" classProps=""><CanvaIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Gimp" color="bg-[#5C5543]" classProps=""><GimpIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Cloudflare" color="bg-[#F38020]" classProps=""><CloudflareIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Alibaba Cloud" color="bg-[#FF6A00]" classProps=""><AlibabaCloud class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Google Cloud" color="bg-[#4285F4]" classProps=""><GoogleCloudIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="VS Code" color="bg-[#007ACC]" classProps=""><VSCodeIcon class="w-6 xs:w-8" /></SkillButton>
      </div>
      <h3 class="text-2xl xxs:text-3xl md:text-4xl text-center">Operating Sytem</h3>
      <div class="flex flex-wrap items-center justify-center gap-2 xs:gap-4">
        <SkillButton name="Linux" color="bg-[#FCC624]" classProps=""><LinuxIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Ubuntu" color="bg-[#E95420]" classProps=""><UbuntuIcon class="w-6 xs:w-8" /></SkillButton>
        <SkillButton name="Windows 11" color="bg-[#0078D4]" classProps=""><WindowsIcon class="w-6 xs:w-8" /></SkillButton>
      </div>
    </div>
  </div>
</RootLayout>
