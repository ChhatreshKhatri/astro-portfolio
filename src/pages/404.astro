---
import RootLayout from "../layouts/RootLayout.astro";
---

<RootLayout title="404 - Page Not Found | Chhatresh Khatri" description="The page you're looking for doesn't exist." keywords="" page="404">
  <div class="flex flex-col items-center justify-center min-h-[60vh] gap-6">
    <div class="relative group">
      <div class="absolute -inset-0 rounded-lg bg-gradient-to-r from-blue2/50 to-green2/50 opacity-20 transition duration-500 group-hover:opacity-50"></div>
      <div class="relative flex flex-col items-center justify-center gap-4 p-8 rounded-lg">
        <h1 class="text-6xl md:text-8xl font-bold bg-gradient-to-r from-ck1 to-ck2 bg-clip-text text-transparent">404</h1>
        <h2 class="text-2xl md:text-4xl font-semibold text-center">Page Not Found</h2>
        <p class="text-lg md:text-xl text-center max-w-md">The page you're looking for doesn't exist or has been moved.</p>
        <div class="flex items-center justify-center p-0.5 rounded bg-gradient-to-r from-ck1 to-ck2 mt-4 cursor-pointer">
          <a href="/" class="flex justify-center items-center py-2 px-6 rounded text-lg font-semibold bg-buttonBg dark:bg-darker hover:bg-opacity-90 transition-all cursor-pointer">
            Return Home
          </a>
        </div>
      </div>
    </div>
  </div>
</RootLayout>
